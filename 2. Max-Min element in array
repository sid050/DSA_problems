// Iterative C++ program to find max and min element in array
// Author Siddhanta Das

#include<iostream>

using namespace std;


int main()
{
    int a[100];
    int i, size,min,max;
    cout<<"Enter The size of the array"<<endl;
    cin>>size;

    cout<<"Enter the elements in the array"<<endl;
    for(i=0;i<size;i++)
    {
        cin>>a[i];

    }

      max=a[0];
      min=a[0];

      for(i=1;i<size;i++)
      {
          if(a[i]>max) {
              max = a[i];
          }
          if(a[i]<min)
              min=a[i];
      }

    cout<<"Maximum element is "<<max<<endl;
     cout<<"Minimum element is "<<min<<endl;
     return 0;

}
