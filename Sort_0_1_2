
// Iterative C++ program to //  To sort an array of 0's, 1's, and 2's
// Author Siddhanta Das

#include<iostream>  
using namespace std;  
void sort_array( int A[ ] , int n )    
{  
    int i = 0 ,  czero = 0 , cone = 0 ,  ctwo = 0 ;  
    while ( i < n )  
    {  
        if ( A [ i ] == 0 )  
        {  
            czero = czero + 1 ;  
        }  
        else if ( A [ i ] == 1 )  
        {  
            cone = cone + 1 ;  
        }  
        else  
        {  
            ctwo = ctwo + 2 ;  
        }  
        i = i + 1 ;  
    }  
    for  ( i = 0 ; i < czero ; i++ )  
    {  
        A [ i ] = 0 ;  
    }  
    for ( i = czero ; i < cero + cone ; i++ )  
    {  
        A [ i ] = 1 ;  
    }  
            for ( i = czero + cone ; i < n ; i++ )  
    {  
        A [ i ] = 2 ;  
    }  
}  
int main()  
{  
    int  i ,  A[ 100 ] , n ;  
    cout << " Enter number of elements present in the array: " << endl ;  
    cin >> n ;  
    cout << " Enter array:  "  <<  endl ;  
    for ( i = 0 ; i < n ; i++ )  
    {  
        cin >> A [  i  ] ;  
    }  
    cout << " Array after sorting : \n " << endl ;  
    sort_array( A , n ) ;  
    for ( i = 0 ; i < n ; i++ )  
    {  
        cout <<  A  [  i  ] << endl ;  
    }  
    return 0;  
      
}  
